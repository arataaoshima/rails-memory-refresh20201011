<div class="container">
<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :category_name %>
    <%= form.text_field :category_name, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :category_content %>
    <%= form.text_area :category_content, class:"form-control", rows:"5" %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="field">
    <%= form.label :category_video %>
    <%= form.text_field :category_video, class:"form-control" %>
  </div>

  <div class="field">
    <%= form.label :order %>
    <%= form.number_field :order %>
  </div>

  <div class="actions text-center">
    <%= form.submit class:"btn btn-outline-success" %>
  </div>
<% end %>
</div>
