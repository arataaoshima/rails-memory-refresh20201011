<h2 class="text-center top-message-wrapper">プロフィール編集</h2>
<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username,autocomplete: "username", class: 'form-control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> 変更の必要がないときは空欄にしておいて下さい。また、<% if @minimum_password_length %><em><%= @minimum_password_length %>文字以上の文字数で設定してください</em> <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
  </div>
  <div class="actions text-center top-study-button-wrapper">
    <%= f.submit "Update", class:"btn btn-success btn-lg" %>
  </div>
<% end %>

<div class="text-right top-message-wrapper">
  <div class="btn-wrapper top-study-button-wrapper">
  <% if current_user.payment == true %>
  <%= link_to "有料会員を辞める", "/unsubscribe", data: { confirm: "本当に有料プランを辞めてよろしいですか？" }, method: :post, class:'btn btn-sm btn-outline-warning'  %>
  <% end %>
</div>

<%= button_to "アカウントを永久に削除する", registration_path(resource_name), data: { confirm: "本当に会員情報を削除してよろしいですか？" }, method: :delete,class:"btn btn-outline-danger btn-sm" %>
<p></p>
<p>※取り消しできませんので、ご注意下さい</p>
</div>

</div>
